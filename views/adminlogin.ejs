<form action="/admin/check_login" method="post">
    <div class="maincontainer">
        <div class="box">
            <img src="/images/hlogo.png" class="pic" />
            <div class="row">
                <div class="col-12 " style="display: flex;align-items: center;"><h2>Admin Login</h2></div>
                <div class="headingstyle">
                    <img src="/images/lock.png" style="width: 10%;
    border-radius: 10%;" />
                </div>
                <div class="btnsize" style="margin: 10px;">
                    <input type="text" class="btnsize" name="emailid" required
                        placeholder="******@gmail.com" />
                </div>
                <div class="btnsize" style="margin: 10px;">
                    <input type="password" class="btnsize" name="password" required placeholder="Password" />
                </div>
                <div class="btnsize" style="margin: 10px;">
                    <button type="submit" class="btn btn-primary btnsize">Login</button>
                </div>
                <div class="btnsize">
                    <a class="btnsize" style="margin: 10px;">Forgot Password?</a>
                </div>
                <div class="btnsize">
                    <%=message %>
                </div>
            </div>
            
        </div>
    </div>
</form>
</html>